{
    "name": "laravel/laravel",
    "type": "project",
    "description": "The Laravel Framework.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "require": {
        "php": "^8.0.2",
        "fruitcake/laravel-cors": "^2.0.5",
        "guzzlehttp/guzzle": "^7.2",
        "laravel/framework": "^9.1",
        "laravel/sanctum": "^2.14",
        "laravel/tinker": "^2.7",
        "php-open-source-saver/jwt-auth": "^1.4.1"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9.1",
        "laravel/sail": "^1.0.1",
        "mockery/mockery": "^1.4.4",
        "nunomaduro/collision": "^6.1",
        "nunomaduro/larastan": "^2.0",
        "nunomaduro/phpinsights": "^2.6",
        "phpstan/phpstan-strict-rules": "^1.1",
        "phpunit/phpunit": "^9.5.10",
        "qossmic/deptrac-shim": "^0.19.3",
        "spatie/laravel-ignition": "^1.0",
        "squizlabs/php_codesniffer": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/",
            "Base\\": "packages/Base",
            "Auth\\": "packages/Example/Auth",
            "Common\\": "packages/Example/Common"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "test": [
            "@php artisan test"
        ],
        "test:coverage": [
            "phpunit --coverage-html coverage"
        ],
        "sniffer": [
            "./vendor/bin/phpcs --standard=phpcs.xml ./packages/"
        ],
        "sniffer-rewrite": [
            "./vendor/bin/phpcbf --standard=phpcs.xml ./packages/"
        ],
        "sniffer-report-csv": [
            "./vendor/bin/phpcs --standard=phpcs.xml --report=csv --report-file=./sniffer-reports/report.csv ./packages/"
        ],
        "static-type-check": [
            "./vendor/bin/phpstan analyse -c phpstan.neon"
        ],
        "document-generator": [
            "@php artisan scribe:generate"
        ],
        "insight": [
            "@php artisan insights packages/Auth -v"
        ],
        "insight-fix": [
            "@php artisan insights packages/Auth --fix"
        ],
        "all" : [
            "./vendor/bin/phpcbf --standard=phpcs.xml ./packages/",
            "./vendor/bin/phpcbf --standard=phpcs.xml ./packages/",
            "./vendor/bin/phpcs --standard=phpcs.xml ./packages/",
            "./vendor/bin/phpstan analyse -c phpstan.neon",
            "./vendor/bin/phpunit"
        ],
        "cache:clear": [
            "@php artisan cache:clear",
            "@php artisan config:clear",
            "@php artisan route:clear",
            "@php artisan view:clear",
            "@composer dump-autoload",
            "@php artisan clear-compiled",
            "@php artisan optimize",
            "@php artisan config:cache"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
